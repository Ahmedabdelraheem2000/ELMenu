<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="93dp"
    app:layout_goneMarginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:outlineSpotShadowColor="@color/Gray"
    android:outlineAmbientShadowColor="@color/Gray"

    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="?android:selectableItemBackground"

    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="6"
          android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="0"
              android:orientation="horizontal"
              android:layout_marginRight="15dp"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="15dp"
              >


          <androidx.cardview.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:cardCornerRadius="3dp"
              android:backgroundTint="@color/Orange"
              >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="تفاصيل"
                  android:layout_margin="3dp"
                  android:textColor="@color/white"
                  />
          </androidx.cardview.widget.CardView>
          <TextView
              android:id="@+id/name_shop_requirment"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
              android:layout_marginLeft="10dp"
              android:layout_weight="5"
              android:fontFamily="@font/almarai"
              android:maxLines="2"
              android:gravity="right"
              android:text="مطعم كيكي"
              android:textColor="@color/black"
              android:textSize="15dp" />
          </LinearLayout>

          <TextView
              android:id="@+id/address_requirment"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:layout_marginTop="5dp"
              android:layout_marginRight="15dp"
              android:layout_weight="5"
              android:gravity="right"
              android:fontFamily="@font/almarai"
              android:maxLines="1"

              android:text="كريب شيكولاته"
              android:textColor="@color/black"
              android:textSize="12dp" />

          <TextView
            android:id="@+id/status_requirment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_gravity="left"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/fairuz_bold"
            android:layout_weight="6"
            android:layout_marginBottom="5dp"
            android:text="في انتظار الموافقة"
            android:alpha="0.8"
            android:textColor="@color/Orange"
            android:textSize="13dp" />



      </LinearLayout>


        <ImageView
            android:id="@+id/image_shop_requirment"
            android:layout_width="match_parent"
            android:layout_weight="16"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/crepe" />


    </LinearLayout>

</androidx.cardview.widget.CardView>