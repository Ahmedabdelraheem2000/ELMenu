<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="15dp"
    android:layout_margin="2dp"
    android:padding="5dp"
    android:background="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image_shop"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:outlineSpotShadowColor="@color/Gray"
        android:outlineAmbientShadowColor="@color/Gray"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"


        app:cardCornerRadius="10dp"
        android:layout_marginBottom="0dp">
        <ImageView
            android:id="@+id/image_shop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            android:src="@drawable/crepe" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/name_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/card_image_shop"
        android:fontFamily="@font/fairuz_bold"
        android:text="مودز"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/label_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_shop"
        android:layout_alignRight="@+id/name_shop"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/s"

        android:text="سندوتشات,كريب,فراخ"
        android:textColor="@color/black"
        android:alpha="0.5"
        android:textSize="17dp" />

</RelativeLayout>